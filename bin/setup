#!/usr/bin/env node

var prompt = require('prompt');
var fs     = require('fs');

prompt.start();
prompt.message   = 'Setup â‡¨  ';
prompt.delimiter = '';

prompt.get({
  properties: {
    key: {
      description: 'AWS Key:'.green,
      required   : true
    },

    secret: {
      description: 'AWS Secret:'.green,
      required   : true
    },

    bucket: {
      description: 'S3 Bucket:'.green,
      default    : 'cdn.genkei.io',
      required   : true
    },

    fastly_key: {
      description: 'Fastly API Key:'.green,
      required   : true
    },

    fastly_service_id: {
      description: 'Fastly Service ID:'.green,
      required   : true
    }
  }
}, function(err, result) {
  if (err) throw err;

  fs.writeFile('config.json', JSON.stringify(result), function(err, result) {
    if (err) throw err;
    console.log('all set!');
  });
});
